@model List<SEDESOL.DataEntities.DTO.UserDTO>


@{
    ViewBag.Title = "Usuarios";
}

<div class="row">
    <div class="col-md-12">

        <h4 class="page-header col-md-11">Usuarios</h4>
        <h4 class="page-header col-md-1">
            <p>
                <span class="glyphicon glyphicon-plus">
                </span>
                @Html.ActionLink("Nuevo", "Edit", new { id = 0 })
            </p>
        </h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                </div>
                <h4 class="panel-title">Listado</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered nowrap" width="100%" id="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Username</th>
                            <th>DNI</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Tipo</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="even gradeC">
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @(@Html.DisplayFor(modelItem => item.Name) + " " + @Html.DisplayFor(modelItem => item.LastName))
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Dni)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.UserType.Description)
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="fa fa-check ">&nbsp;</span>@Html.ActionLink("Desactivar", "Deactivate", new { id = item.Id })
                                    }
                                    else
                                    {
                                        <span class="fa fa-times">&nbsp;</span>@Html.ActionLink("Activar", "Activate", new { id = item.Id })
                                    }
                                </td>
                                <td>
                                    <span class="glyphicon glyphicon-pencil">&nbsp;</span>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                                    <br />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>