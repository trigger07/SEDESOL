@model SEDESOL.DataEntities.DTO.CatalogDTO
@{
    Html.EnableClientValidation(false);
    ViewBag.Title = "Registro de Catálogos";
}

<div class="row">
    <div class="col-md-6">
        <h4>Administración de Catálogos</h4>
    </div>
    <div class="col-md-6">
        <div class="col-md-7 pull-right" style="padding-right:0px;">
            <div class="alert alert-warning">
                <div><i class="fa fa-trash-o fa-lg pull-left m-t-2"></i><b class="text-inverse"> = </b> Click para desactivar un elemento del catálogo.</div>
                <div><i class="fa fa-plug fa-lg pull-left m-t-2"></i><b class="text-inverse"> = </b> El elemento está Inactivo. Click para Activar.</div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12" id="pnlListas">
        @Html.Partial("Listas")
    </div>
</div>

