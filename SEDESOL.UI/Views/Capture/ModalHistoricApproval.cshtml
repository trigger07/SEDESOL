@using SEDESOL.DataEntities.DTO;
@model List<CaptureApprovalDTO>

<table id="approvalTable" class="table table-striped table-bordered nowrap" width="100%">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Usuario</th>
            <th>Nivel</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="odd gradeX">
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusDto.Description)
                </td>
                <td>
                    @(@Html.DisplayFor(modelItem => item.UserDto.Name) + " " + @Html.DisplayFor(modelItem => item.UserDto.LastName))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDto.UserType.Description)
                </td>
            </tr>
        }

    </tbody>
</table>
<hr />
