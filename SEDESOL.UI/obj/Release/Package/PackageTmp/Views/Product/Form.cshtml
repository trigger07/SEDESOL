
<div class="row">
    <form id="frmProduct">
        <input type="hidden" id="prodId" name="prodId" />
        <div class="col-md-12 m-t-10">
            <input id="txtDescription" class="form-control input" placeholder="Producto" data-parsley-required="true" />
        </div>
        <div class="col-md-12 m-t-10">
            <input id="txtMeasure" class="form-control input" placeholder="Gramaje (3 Decimales Requeridos)" data-parsley-required="true" data-parsley-trigger="keyup" data-parsley-type="number" min="0" data-parsley-pattern="^[0-9]*\.[0-9]{3}$" />
        </div>
        <div class="col-md-12 m-t-10">
            <select class="form-control input" id="cboMeausure" data-parsley-required="true" name="cboMeasure">
                <option value="">Unidad Medida</option>
                <option value="gr">gr</option>
                <option value="ml">ml</option>
            </select>
        </div>
        <div class="col-md-12 m-t-10">
            <input id="txtMomio" class="form-control input" placeholder="Momio (3 Decimales Requeridos)" data-parsley-required="true" data-parsley-trigger="keyup" data-parsley-type="number" min="0" data-parsley-pattern="^[0-9]*\.[0-9]{3}$"/>
        </div>
    </form>
    <div class="col-md-12 m-t-10" style="padding-left:20px;">
        <input id="chkStatus" type="checkbox"/>
        <label for="chkStatus">Activo</label>
    </div>
</div>

