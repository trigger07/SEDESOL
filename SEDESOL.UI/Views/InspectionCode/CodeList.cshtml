@using SEDESOL.DataEntities.DTO;
@model List<InspectionCodeDTO>

<table id="codeListTable" class="table table-striped table-bordered nowrap" width="100%">
    <thead>
        <tr>
            <th>Año</th>
            <th>Mes</th>
            <th>Código Generado</th>
            <th>Imprimir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr class="odd gradeX">
                <td>
                    @Html.DisplayFor(modelItem => item.YearDto.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MonthDto.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InspectionCode)
                </td>
                <td>
                    <button type="button" class="fa fa-file-pdf-o" style="background-color:transparent; border:none;" onclick="window.location.href = '@Url.Action("ExportToPdf", "InspectionCode", new { pYear = item.YearDto.Description, pMonth = item.MonthDto.Description, pCode = item.InspectionCode })'"></button>
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                
                <td>
                    <button type="button" class="fa fa-trash-o" style="background-color:transparent; border:none;" onclick="DeleteAttendance(@item.Id)"></button>
                </td>*@
            </tr>
        }
    </tbody>
</table>



