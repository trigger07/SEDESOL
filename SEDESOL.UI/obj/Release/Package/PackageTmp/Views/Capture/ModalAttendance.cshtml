@using SEDESOL.DataEntities.IntegrationObjects;
@model CaptureModel
<div class="table-responsive">
    <table id="attendanceModalList" class="table table-striped table-bordered nowrap" width="95%">
        <thead>
            <tr>
                <th>Curp</th>
                <th>Nombre</th>
                <th>Fecha Nacimiento</th>
                @*<th>Sexo</th>
                    <th>Condición</th>
                    <th>Lugar Nacimiento</th>
                    <th>Teléfono</th>*@
                <th>Raciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Capture.AttendanceList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curp)
                    </td>
                    <td>
                        @(@Html.DisplayFor(modelItem => item.Name) + " " + @Html.DisplayFor(modelItem => item.LastName) + " " + @Html.DisplayFor(modelItem => item.LastName2))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthdate)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConditionDto.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StateDto.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
    <hr />
    <div class="row">
        <div class="col-md-2 col-md-offset-8" style="margin-top:10px;">
            <button type="button" id="btnExcel" onclick="document.location.href = '@Url.Action("ExportAttendance", "Capture", new { id = Model.Capture.Id })'" class="btn btn-sm col-md-12  btn-primary" style="font-size:16px;">Excel</button>
        </div>
        <div class="col-md-2" style="margin-top:10px;">
            <button type="button" class="btn btn-sm col-md-12  btn-danger" style="font-size:16px;" data-dismiss="modal" aria-hidden="true">Cerrar</button>
        </div>

    </div>

