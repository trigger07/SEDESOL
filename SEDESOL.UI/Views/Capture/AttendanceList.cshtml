@using SEDESOL.DataEntities.DTO;
@model List<AttendanceDTO>

<table id="attendanceList" class="table table-striped table-bordered nowrap" width="100%">
    <thead>
        <tr>
            <th>Curp</th>
            <th>Nombre</th>
            <th>Fecha Nacimiento</th>
            <th>Raciones</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td>
                        @Html.DisplayFor(modelItem => item.Curp)
                    </td>
                    <td>
                        @(@Html.DisplayFor(modelItem => item.Name) + " " + @Html.DisplayFor(modelItem => item.LastName) + " " + @Html.DisplayFor(modelItem => item.LastName2) )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <button type="button" class="fa fa-pencil" style="background-color:transparent; border:none;" onclick="EditAttendance(@item.Id)"></button>
                    </td>
                    <td>
                        <button type="button" class="fa fa-trash-o" style="background-color:transparent; border:none;" onclick="DeleteAttendance(@item.Id)"></button>
                    </td>
                </tr>
            }
    </tbody>
</table>

